<main>
  <h1>新規会員登録</h1>
  <div class="form">
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "customers/shared/error_messages", resource: resource %>
  
  <div class="field">
    <p>名前</p>
    <div class="field_inner">
      <%= f.label :last_name, "（性）", class: 'name-label' %>
      <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: 'name-box' %>
    </div>
    <div class="field_inner">
      <%= f.label :first_name, "（名）", class: 'name-label first' %>
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: 'name-box' %>
    </div>
  </div>
  
  <div class="field">
    <p>フリガナ</p>
    <div class="field_inner">
    <%= f.label :last_name_kana, "（セイ）", class: 'kana-label' %>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: 'name-box' %>
    </div>
    <div class="field_inner">
    <%= f.label :first_name_kana, "（メイ）", class: 'kana-label first' %>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class: 'name-box' %>
    </div>
  </div>

  <div class="field">
    <div class="label">
      <%= f.label :email, "メールアドレス" %>
    </div>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-box' %>
  </div>
  
  <div class="field">
    <div class="label">
      <%= f.label :postal_code, "郵便番号（ハイフンなし）" %>
    </div>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: 'form-box' %>
  </div>
  
  <div class="field">
    <div class="label">
      <%= f.label :address, "住所" %>
    </div>
    <%= f.text_field :address, autofocus: true, autocomplete: "address", class: 'address-box' %>
  </div>
  
  <div class="field">
    <div class="label">
      <%= f.label :telephone_number, "電話番号" %>
    </div>
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number", class: 'form-box' %>
  </div>

  <div class="field">
    <div class="label">
      <%= f.label :password, "パスワード" %>
      <% if @minimum_password_length %>
        (<%= @minimum_password_length %> 文字以上)
      <% end %>
    </div>
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-box' %>
  </div>

  <div class="field">
    <div class="label">
      <%= f.label :password_confirmation, "パスワード（確認用）" %>
    </div>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-box' %>
  </div>

  <div class="action-button">
    <%= f.submit "新規登録", class: 'button' %>
  </div>
<% end %>

<%= render "customers/shared/links" %>
  </div>
</main>
