<main>
  <h1>注文情報入力</h1>
  <%= form_with model: @order, url:confilm_order_path, loacl:true do |f| %>
  <div class="form_group">
    <h2>支払い方法</h2>
    <div>
      <%= f.radio_button :payment, Order.payments.key(0) %>
      <%= f.label :payment, Order.payments_i18n[:credit_card] %>
    </div>
    <div>
      <%= f.radio_button :payment, Order.payments.key(1) %>
      <%= f.label :payment, Order.payments_i18n[:transfer] %>
    </div>
  </div>
  <div class="form_group">
    <h2>お届け先</h2>
    <div>
      <% if current_customer.address %>
      <%= f.radio_button :select_address, 0 %>
      <%= f.label :ご自身の住所 %><br>
      <%= current_customer.address %>
      <% end %>
    </div>
    <div>
      <%= f.radio_button :select_address ,1 %>
      <%= f.label :登録済みの住所から選択　%><br>
      <%= f.select :addresse_id, options_from_collection_for_select(Addresse.all, :id, :full_address) %>
    </div>
    <div>
      <%= f.radio_button :select_address, 2 %>
      <%= f.label :新しいお届け先 %>
      <div class="form_group">
        <%= f.label :postal_code, "郵便番号（ハイフンなし）" %>
        <%= f.text_field :postal_code %>
      </div>
      <div class="form_group_inner">
        <%= f.label :addresses, "住所" %>
        <%= f.text_field :addresses %>
      </div>
      <div class="form_group_inner">
        <%= f.label :name, "宛名" %>
        <%= f.text_field :name %>
      </div>
    </div>
  </div>
  <%= f.submit "確認画面へ進む" %>
  <% end %>
</main>
