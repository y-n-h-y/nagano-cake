<main>
  <h1>会員情報編集</h1>
  <%= form_with model: @customer, url:customer_path(current_customer), local:true do |f| %>
  <div class="form-field">
    <div class="form_group">
      <p>氏名</p>
      <div class="form_group_inner">
        <%= f.label :last_name, class: 'hidden-label' %>
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: 'name-box left' %>
      </div>
      <div class="form_group_inner">
        <%= f.label :first_name, class: 'hidden-label' %>
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: 'name-box' %>
      </div>
    </div>
    <div class="form_group">
      <p>フリガナ</p>
      <div class="form_group_inner">
        <%= f.label :last_name_kana, class: 'hidden-label' %>
        <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: 'name-box left' %>
      </div>
      <div class="form_group_inner">
        <%= f.label :first_name_kana, class: 'hidden-label' %>
        <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class: 'name-box' %>
      </div>
    </div>
    <div class="form_group">
      <p><%= f.label :postal_code, "郵便番号" %></p>
      <div class="form_group_inner">
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: 'form-box' %>
      </div>
    </div>
    <div class="form_group">
      <p><%= f.label :address, "住所" %></p>
      <div class="form_group_inner">
        <%= f.text_field :address, autofocus: true, autocomplete: "address", class: 'address-box' %>
      </div>
    </div>
    <div class="form_group">
      <p><%= f.label :telephone_number, "電話番号" %></p>
      <div class="form_group_inner">
        <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number", class: 'form-box' %>
      </div>
    </div>
    <div class="form_group">
      <p><%= f.label :email, "メールアドレス" %></p>
      <div class="form_group_inner">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-box' %>
      </div>
    </div>
    <div class="submit-button">
      <%= f.submit "編集内容を保存", class: 'button' %>
    </div>
  </div>
  <% end %>
</main>
