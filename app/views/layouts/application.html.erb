<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="containar">
        <div class="logo">
          <%= image_tag('logo.png') %>
        </div>
        <nav>
          <ul>
            <% if customer_signed_in? %>
            <li><%= link_to "マイページ", about_path, class: 'menu' %></li>
            <li><%= link_to "商品一覧", about_path, class: 'menu' %></li>
            <li><%= link_to "カート", about_path, class: 'menu' %></li>
            <li><%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: 'menu' %></li>
            <% elsif admin_signed_in? %>
            <li><%= link_to "商品一覧", about_path, class: 'menu' %></li>
            <li><%= link_to "会員一覧", about_path, class: 'menu' %></li>
            <li><%= link_to "注文履歴一覧", about_path, class: 'menu' %></li>
            <li><%= link_to "ジャンル一覧", about_path, class: 'menu' %></li>
            <li><%= link_to "ログアウト", about_path, class: 'menu' %></li>
            <% else %>
            <li><%= link_to "About", about_path, class: 'menu' %></li>
            <li><%= link_to "商品一覧", about_path, class: 'menu' %></li>
            <li><%= link_to "新規登録", new_customer_registration_path, class: 'menu' %></li>
            <li><%= link_to "ログイン", new_customer_session_path, class: 'menu' %></li>
            <% end %>
          </ul>
        </nav>
      </div>
    </header>
    <div class="top-space"></div>
    <%= yield %>
  </body>
</html>
